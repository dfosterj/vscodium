// place at ~/.config/Code/User/keybindings.json
 [
      {
        "key": "ctrl+t",
        "command": "workbench.action.terminal.focus"
      },
      {
        "key": "ctrl+shift+t",
        "command": "workbench.action.closePanel",
        "when": "terminalFocus || editorTextFocus"
      },
      {
        "key": "ctrl+x",
        "command": "workbench.action.toggleMaximizedPanel",
        "when": "terminalFocus"
      },
      {
        "key": "i",
        "command": "explorer.openToSide",
        "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
      },
      {
        "key": "ctrl+enter",
        "command": "-explorer.openToSide",
        "when": "explorerViewletFocus && explorerViewletVisible && !inputFocus"
      },
    {
        "key": "shift+h",
        "command": "workbench.action.previousEditor",
        "when": "editorFocus"
    },
    {
        "key": "shift+l",
        "command": "workbench.action.nextEditor",
        "when": "editorFocus"
    },
    {
        "key": "ctrl+b",             // when Explorer not open
        // "command": "workbench.view.explorer",   // either of these commands works
        "command": "workbench.files.action.focusFilesExplorer",
        "when": "!explorerViewletVisible"
    },
    {
        "key": "ctrl+b",              // when Explorer open
        "command": "workbench.action.toggleSidebarVisibility",
        "when": "explorerViewletVisible"
    },
    {
        "key": "ctrl+p",
        "command": "workbench.action.quickOpen"
    },
    {
        "key": "ctrl+j",
        "command": "workbench.action.quickOpenSelectNext",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+k",
        "command": "workbench.action.quickOpenSelectPrevious",
        "when": "inQuickOpen"
    },
    {
        "key": "ctrl+shift+a",
        "command": "workbench.action.toggleActivityBarVisibility"
    },
    {
        "key": "alt+q",
        "command": "workbench.action.closeFolder"
    },
    {
        "key": "alt+shift+g",
        "command": "workbench.action.tasks.runTask",
        "args": "Open LazyGit"
    },
    {
        "key": "alt+shift+m",
        "command": "workbench.action.tasks.runTask",
        "args": "Open GH Dash"
    },
    {
        "key": "alt+shift+p",
        "command": "workbench.action.tasks.runTask",
        "args": "Create PR GH"
    },
    {
        "key": "ctrl+shift+b",
        "command": "git.checkout"
    },
    {
        "key": "alt+c",
        "command": "editor.action.commentLine",
        "when": "editorTextFocus && !editorReadonly"

    },
]
