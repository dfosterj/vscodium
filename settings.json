{
    //////////////////////////////////////////////////////////////////////////////// 
    //Window
    //////////////////////////////////////////////////////////////////////////////// 
    "editor.minimap.enabled": false,
    "workbench.editor.enablePreview": false,
    "workbench.startupEditor": "none",
    "workbench.editor.openSideBySideDirection": "down",
    "editor.referencesCodeLens.enabled": false,
    "editor.lightbulb.enabled": "off",
    "terminal.integrated.showExitAlert": false,
    "editor.codeLens": false,
    "window.restoreWindows": "none",
    //////////////////////////////////////////////////////////////////////////////// 
    //Git
    //////////////////////////////////////////////////////////////////////////////// 
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "git.autofetch": true,
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["Z", "Z"],
            "commands": [
                ":wq"
            ]
        },
        {
            "before": ["Z", "Q"],
            "commands": [
                ":q!"
            ]
        }
    ],
    //////////////////////////////////////////////////////////////////////////////// 
    //Font
    //////////////////////////////////////////////////////////////////////////////// 
    "editor.fontSize": 17,
    "editor.fontWeight": "500",
    "editor.fontLigatures": true,
    "terminal.integrated.fontSize": 17,
    "terminal.integrated.fontWeight": "500",
    "terminal.integrated.fontWeightBold": "500",
    "workbench.fontAliasing": "antialiased",
    //"editor.fontFamily": "Iosevka Custom",
    //"terminal.integrated.fontFamily": "Iosevka Custom"
    "editor.fontFamily": "Fir",
    "editor.fontFamily": "FiraCode Nerd Font, Fira Code, monospace",
    "explorer.confirmDelete": false,
    "window.confirmSaveUntitledWorkspace": false,
    //////////////////////////////////////////////////////////////////////////////// 
    //Extensions
    //////////////////////////////////////////////////////////////////////////////// 
    //"extensions": {
    //    "recommendations": [
    //    ],
    //    "unwantedRecommendations": []
    //},
    "godot.csharp.executablePath": "",
    "workbench.activityBar.location": "hidden",
    "workbench.colorTheme": "The unnamed (No Italics)",
